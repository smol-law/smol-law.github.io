body
  color black
  background-color: white;
  .menu__item
    &--current
      .menu__link
        text-decoration none
    .menu__link
      text-decoration: none;
  header
    .main-title
      font-size: 40px;
    .main-sub-title
      font-size: 30px;
      line-height: 20px;
    .navigation
      .call-us
        display: none;
        float right
      section
        width 100vw;
        text-align:  center;
        display: inline-block;
        -webkit-transition: all 0.25s ease-in-out;
        -moz-transition: all 0.25s ease-in-out;
        -o-transition: all 0.25s ease-in-out;
        transition: all 0.25s ease-in-out;
        .menu-toggle
          font-size: 32px;
          display: none;
        nav
          display: inline-block;
      &.fixed
        position: fixed;
        background-color: #f4f4f4;
        top: 0px;
        left: 0px;
        z-index: 1;
        width: 100%;
        margin-left: 0px;
        .call-us
          display: block;
          height: auto;
          width: auto;
          position: absolute;
          right: 0px;
          top: 0px;
        section
          width 419px
        & ~ .holder
          display: block;
      .menu
        margin-bottom: 0px;
      & ~ .holder
        display: none;
  main
    h3
      padding-top: 35px;
      margin-top: -15px;
  .call-us
    height: 100px;
    width: 100%;
    text-align: right;
    padding-top: 20px;
    padding-right: 50px;
    font-size: 20px;
  .logo
    padding-left: 20px;
  .screen-1
    .imaged-block
      position: relative;
      .overflow-text
        position: absolute;
        left: 50px;
        top: 100px;
        font-family: 'Open Sans', sans-serif;
        font-size: 54px;
        font-weight: 700;
      .steps
        .step-1
          padding-left: 0;
        .step-2
          padding-left: 50px;
        .step-3
          padding-left: 100px;
      img
        width 100%

@require 'small'
